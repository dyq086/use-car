@import '../common/index.wxss';.van-index-bar {
  position: relative;
}
.van-index-bar__sidebar {
  position: fixed;
  top: 50%;
  right: 0;
  display: flex;
  flex-direction: column;
  text-align: center;
  transform: translateY(-50%);
  user-select: none;
}
.van-index-bar__index {
  font-weight: 500;
  padding: 0 8rpx 0 32rpx;
  padding: 0 var(--padding-base, 8rpx) 0 var(--padding-md, 32rpx);
  font-size: 20rpx;
  font-size: var(--index-bar-index-font-size, 20rpx);
  line-height: 28rpx;
  line-height: var(--index-bar-index-line-height, 28rpx);
}
