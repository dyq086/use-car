    getTagList() {
        this.$parent.db
            .collection("tags")
            .where({
                is_deleted: false
            })
            .get()
            .then(res => {
                this.tagList = res.data
                this.$apply()
            })
    }
    getCarTagList() {
        this.$parent.db
            .collection("car_tags")
            .where({
                is_deleted: false
            })
            .get()
            .then(res => {
                this.carTagList = res.data
                this.$apply()
            })
    }

    deleteImage(event) {
        console.log(event)
        let { index, name } = event.detail
        this.form[name].splice(index, 1)
        this.$apply()
    }
    upLoadImage(event) {
        const { file, name } = event.detail
        let filename = md5(new Date().getTime())
        wx.showLoading({
            title: "上传中"
        })
        wx.cloud
            .uploadFile({
                cloudPath: filename,
                filePath: file.path
            })
            .then(res => {
                this.form[name].push({ url: res.fileID, name: filename, isImage: true })
                wx.hideLoading()
                this.$apply()
            })
            .catch(error => {
                wx.hideLoading()
            })
    }
    onSubmit() {
        console.log(this.form)
        this.validate("form", valid => {
            if (valid.length == 0) {
                this.saveCar()
            }
        })
    }
    saveCar() {
        wx.showLoading({
            title: "提交中"
        })
        this.$parent.db
            .collection("cars")
            .add({
                data: this.form
            })
            .then(res => {
                wx.showToast({
                    title: "添加成功",
                    icon: "success",
                    duration: 2000
                })
                this.reset()
            })
    }
    reset() {
        this.form = {
            banner_img: [],
            car_name: "",
            price: "",
            vip_price: "",
            mileage:"",
            phone_num: [],
            tags: [],
            car_tags: [],
