                }
            ],
            detail_accident: [],
            detail_underpan: [],
            detail_slight: [],
            detail_easyWear: [],
            detail_function: [],
            detail_start: [],
            detail_surface: [],
            is_deleted: false
        }
        this.$apply()
    }
}
